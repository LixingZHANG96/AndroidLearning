<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainTxtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Quantity" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mainBtnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:minWidth="50dp"
            android:minHeight="30dp"
            android:onClick="decrement"
            android:text="-"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mainTxtQuantityResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mainBtnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:minWidth="50dp"
            android:minHeight="30dp"
            android:onClick="increment"
            android:text="+"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mainTxtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainBtnMinus"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Price" />

    <TextView
        android:id="@+id/mainTxtPriceResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTxtPrice"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mainBtnOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTxtPriceResult"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:minHeight="20dp"
        android:onClick="submitOrder"
        android:text="Order" />

</LinearLayout>